<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../styles.css" />
  </head>
  <body>
    <div>
      <h1 class="text-center">Products Gallery</h1>
      <div class="products-container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          <%if(products.length>0){%> <% products.forEach(function(product){%>
            <tr>
              <td><%= product.title %> </td>
              <td><%= product.price %></td>
              <td><img src=<%= product.thumbnail %> width="150"</td>
            </tr>
            <%})%> <%} %>
        </tbody>
      </table>
    </div>
   
    <script src="index.js"></script>
  </body>
</html>
